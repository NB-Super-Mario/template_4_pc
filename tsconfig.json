{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/scripts/components/*"],
      "@common/*": ["src/scripts/common/*"],
      "@actions/*": ["src/scripts/actions/*"],
      "@api/*": ["src/scripts/api/*"],
      "@routes/*": ["src/scripts/routes/*"],
      "@util/*": ["src/scripts/util/*"],
      "@hooks/*": ["src/scripts/hooks/*"],
      "@constants/*": ["src/scripts/constants/*"],
      "@containers/*": ["src/scripts/containers/*"],
      "@reducers/*": ["src/scripts/reducers/*"]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "forceConsistentCasingInFileNames": false,
    "experimentalDecorators": true,
    "noImplicitAny": true, //在表达式和声明上有隐含的 any 类型时报错。
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
